
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation

@model RenderingModel

@if (Model != null && Model.Item != null)
{
    <div class="container-fluid bg-dark py-3 px-lg-5 d-none d-lg-block">
        <div class="row">
            <div class="col-md-6 text-center text-lg-left mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center">                    
                        <i class="fa fa-phone-alt mr-2"> </i>
                    @Html.Sitecore().BeginField("Phone", Model.Item, new { @class = "text-body pr-3" })
                    @Html.Sitecore().EndField()
                    |
                    <i class="fa fa-envelope ml-2"></i>
                    @Html.Sitecore().BeginField("Email", Model.Item, new { @class = "text-body px-2" })
                    @Html.Sitecore().EndField()
                </div>
            </div>
            <div class="col-md-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    @Html.Sitecore().BeginField("FacebookLink", Model.Item, new { @class = "text-body px-3" })
                    <i class="fab fa-facebook-f"></i>
                    @Html.Sitecore().EndField()

                    @Html.Sitecore().BeginField("TwitterLink", Model.Item, new { @class = "text-body px-3" })
                    <i class="fab fa-twitter"></i>
                    @Html.Sitecore().EndField()

                    @Html.Sitecore().BeginField("InstagramLink", Model.Item, new { @class = "text-body px-3" })
                    <i class="fab fa-instagram"></i>
                    @Html.Sitecore().EndField()

                    @Html.Sitecore().BeginField("YoutubeLink", Model.Item, new { @class = "text-body px-3" })
                    <i class="fab fa-youtube"></i>
                    @Html.Sitecore().EndField()
                     
                </div>
            </div>
        </div>
    </div>
}